@************************************************Student Image Carousel*****************************************************************************************************@
<div class="container-fluid col-12 pt-0">
    <div style="width:100%" id="carouselExampleIndicators" class="carousel slide pl-0 pr-0 carousel-fade" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" style="width:100%; height:25%">
    <div class="carousel-item active "style="width:100% !important; height:25% !important; background-size:cover">
      <img class="d-block w-100" src="~/css/Hod-1.png" alt="First slide">
    </div>
    <div class="carousel-item" style="width:100% !important; height:25% !important; background-size:cover">
      <img class="d-block w-100" src="~/css/Student2.png" alt="Second slide">
    </div>
    <div class="carousel-item" style="width:100% !important; height:25% !important; background-size:cover">
      <img class="d-block w-100" src="~/css/Student3.png" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev " href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next " href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>

<hr class="border-3  pt-0" style="width:100%" /> 

