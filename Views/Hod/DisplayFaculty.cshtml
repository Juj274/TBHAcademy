@model IEnumerable<TBHAcademy.Models.Faculty>

@{
    ViewData["Title"] = "DisplayFaculty";
    Layout = "~/Views/Shared/_HodLayout.cshtml";
}

<h1>DisplayFaculty</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.FacultyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.FacultyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FacultyDescription)
            </td>
            <td>
                <a asp-controller="hod" asp-action="UpdateFaculty" asp-route-ID ="@item.FacultyId" class="btn btn-outline-primaty">Update</a>
            </td>
        </tr>
}
    </tbody>
</table>
