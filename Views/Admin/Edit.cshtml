@model TBHAcademy.Models.Course
@{

    Layout = "_AdminLayout";
    string title = ViewBag.Action + " Course";
    ViewBag.Title = title.ToUpper();
}


<div class="w-100 " style="background: rgba(6, 73, 181,0.5)">
    <div class="pt-1 m-0 row">
        <h5 class="text-white text-center ">Edit Course</h5>
    </div>
</div>


@*<div class="container">
    <h2 class="text-white text-center text-dark jumbotron">@ViewBag.Title</h2>
</div>*@
<div class="container-fluid pt-2" style="background-color: white">
     <div class=" pt-5 col-md-6 col-sm-12">
         <form method="post" asp-action="Edit">
             <input type="hidden" asp-for="CourseId" />
             <div class="form-group">
                 <label class="text-black font-weight-bold"  asp-for="CourseName"></label>
                 <input asp-for="CourseName" class="form-control" />
                 <span asp-validation-for="CourseName" class="text-danger"></span>
             </div>

             <div class="form-group">
                 <label class="text-black font-weight-bold" asp-for="CourseDescription"></label>
                 <input asp-for="CourseDescription" class="form-control" />
                 <span asp-validation-for="CourseDescription" class="text-danger"></span>
             </div>
             <!--change this to use model values -->
             <div class="form-group">
                 <label class="text-black font-weight-bold" asp-for="Faculty"></label>
                
             <div class="dropdown">
                 <select asp-for="FacultyId" class="form-control">
                     @foreach (Faculty p in ViewBag.Faculty)
                     {
                         <option value="@p.FacultyId">@p.FacultyName</option>
                     }
                 </select>
                 <span asp-validation-for="Faculty.FacultyId" class="text-danger"></span>
             </div>
             </div>
             <div class="text-center p-4">
                 <input type="hidden" asp-for="CourseId" />
                 <button type="submit" class=" btn btn-primary btn-md-lg btn-sm-sm text-center" id="AddCourse">@ViewBag.Action</button>
                 <a asp-action="ListCourse" class=" btn btn-outline-secondary ml-1">View Courses</a>
                 <button type="reset" class=" w-25 btn btn-outline-danger">Clear</button>
             </div>
         </form>
    </div>
</div>

