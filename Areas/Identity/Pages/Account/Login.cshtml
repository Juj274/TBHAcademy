@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout="_LogIn-RegisterLayout";
}
<div class="row" style="background-color:#4152B3;width:100%">
    <div class="col-md-6 pl-5 pr-5 pt-5 pb-0 col-sm-12">
        <section>
          <a href="@Url.Action("Index","Home")"><i class='bx bx-arrow-back bx-rotate-270 bx-tada bx-sm' style='color:white'  ></i></a> 
            <form id="account" method="post">
                 <h2 class="text-white text-center">Lets you sign in</h2>
           
            <h6 class="text-white">New Student and sont have account? <a class="text-white font-italic" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here.</a></h6>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <a class="btn btn-primary" asp-controller="Student" asp-action="Index" type="submit" >Submit</a>
                     <button type="submit" class="btn btn-primary  btn-md-lg btn-sm-sm text-center" style="width:400px">Login</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="text-white" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="text-white" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>

            </form>
        </section>

    </div>

    <div class=" col-md-6 col-sm-12 col-md-offset-2 p-0 m-0 " style="Background:#e6eef4">
      <img src="~/css/LOgINBackground.png" width="80%" />
       <ul class="circles">
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                    <li></li>
                   </ul>
    </div>       
 </div >
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
